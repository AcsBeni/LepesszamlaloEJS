<%- include('header') %>

<div class="container mt-4">

  <h4 class="page-title mb-4">Dashboard</h4>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card rounded-3 shadow-sm steps-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Lépések</h5>
            <a href="/steps/new" class="btn btn-primary btn-sm">Új lépés</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover align-middle steps-table rounded-3 shadow-sm">
              <thead class="steps-thead">
                <tr>
                  <th>#</th>
                  <th>Dátum</th>
                  <th>Lépés darab</th>
                </tr>
              </thead>
              <tbody>
                <% if (results.length === 0) { %>
                  <tr>
                    <td colspan="3" class="text-center py-3">Nincsenek lépésadatok</td>
                  </tr>
                <% } %>
                <% results.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.date %></td>
                    <td><%= item.steps %></td>
                  </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="4" class="text-center py-2">
                    Összesen <strong><%= results.length %></strong> lépésadat
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card rounded-3 shadow-sm" style="background-color:#B8D8D8;">
        <div class="card-body">
          <h5 class="card-title mb-3">Lépések grafikon</h5>
          <canvas id="stepsChart" height="250"></canvas>
        </div>
      </div>
    </div>

  </div>
  <div class="row mt-4">
    <div class="col-12">
      <div class="card rounded-3 shadow-sm" style="background-color:#B8D8D8;">
        <div class="card-body">
          <h5 class="card-title mb-3">Lépés Naptár</h5>
          <div id="stepsCalendar"></div>
        </div>
      </div>
    </div>
  </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('stepsChart').getContext('2d');
  const labels = <%- JSON.stringify(results.map(r => r.date)) %>;
  const data = <%- JSON.stringify(results.map(r => r.steps)) %>;

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Lépések',
        data: data,
        backgroundColor: 'rgba(122, 158, 159, 0.3)',
        borderColor: '#4F6367',
        pointBackgroundColor: '#7A9E9F',
        pointBorderColor: '#4F6367',
        pointRadius: 6,
        pointHoverRadius: 8,
        fill: true,
        tension: 0.3
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: {
        x: { grid: { color: 'rgba(79, 99, 103, 0.1)' }, ticks: { color: '#4F6367' } },
        y: { grid: { color: 'rgba(79, 99, 103, 0.1)' }, ticks: { color: '#4F6367', beginAtZero: true } }
      }
    }
  });
</script>
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const calendarEl = document.getElementById('stepsCalendar');
    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      themeSystem: 'bootstrap',
      height: 600,
      headerToolbar: { left: 'prev,next today', center: 'title', right: 'dayGridMonth,timeGridWeek,timeGridDay' },
      events: <%- JSON.stringify(results.map(r => ({
        title: r.steps + ' lépés',
        start: r.date,
        backgroundColor: '#7A9E9F',
        borderColor: '#4F6367',
        textColor: '#EEF6F6'
      }))) %>
    });
    calendar.render();
  });
</script>

<%- include('footer') %>
