<%- include('header') %>
<%- include('message') %>
<div class="row justify-content-center align-items-center auth-wrapper">
  <div class="col-md-8 col-lg-6 col-xl-4">

    <div class="auth-card">
      <div class="card-body p-4 p-md-5">

        <div class="text-center mb-4">
          <div class="auth-icon mb-3"></div>
          <p class="auth-subtitle">
            Csatlakozz egy egészségesebb életmódhoz!
          </p>
        </div>

        <form action="/login" method="post">

          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control auth-input"
              id="email"
              name="email"
              placeholder="Email"
              required>
            <label for="email">Email</label>
          </div>

          <div class="form-floating mb-4">
            <input
              type="password"
              class="form-control auth-input"
              id="password"
              name="password"
              placeholder="Jelszó"
              required>
            <label for="password">Jelszó</label>
          </div>

          <div class="d-grid gap-2">
            <button class="btn auth-btn-primary">
              Belépés
            </button>
            <a href="/registration" class="btn auth-btn-secondary">
              Regisztráció
            </a>
          </div>

        </form>
      </div>
    </div>

  </div>
</div>
<%- include('footer') %>